<div class="bs-docs-header" id="content">
  <div class="container">
    <h1><span class="glyphicon glyphicon-th-list"></span> Meldeliste</h1>
  </div>
</div>

<div class="container bs-docs-container">
	<div class="row">
		<div class="col-md-12" role="main">
			<div class="panel panel-primary">
				<div class="panel-heading">
					<h3>Meldeliste</h3>
				</div>
				<div class="panel-body">
					<%if flash.now[:notice] %>
						<div class="alert alert-success alert-dismissible" role="alert">
							<button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
	    	  				<%= flash.now[:notice] %>
    	  				</div>
    				<% end -%>

					<%if flash.now[:error] %>
						<div class="alert alert-danger alert-dismissible" role="alert">
							<button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
	    	  				<%= flash.now[:error] %>
    	  				</div>
    				<% end -%>
    				<p>Bisher sind folgende Teilnehmer bzw. Teams angemeldet:</p>
    				<table class="table table-bordered table-striped" id="user_table">
    					    <thead>
						      <tr>

						        <th>Team</th>
						        <% if user_signed_in?%>
						        	<th>Anmeldung am</th>
						        <% end %>
						        <th>Vorname</th>
						        <th>Nachname</th>
						        <% if user_signed_in?%>
						        	<th>Strasse</th>
						        <% end %>
						        <th>Ort</th>
						        <% if user_signed_in?%>
						        	<th>Email</th>
						        	<th>Fahrer</th>
						        	<th>Bezahlt?</th>
						        	<th>LÃ¶schen</th>
						        <% end %>
						      </tr>
						    </thead>
						    <tbody>
	    						<%= render partial: "form", collection: @registrations %>
	    					</tbody>
	    			</table>
    			</div>
    		</div>
    	</div>

					
	</div>
</div>

<script>
  	enable_top_menu('meldeliste');
</script>
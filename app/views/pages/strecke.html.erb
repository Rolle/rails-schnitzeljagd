			<%= link_to image_tag("panorama_3_thumb.jpg", :class=>"img-responsive"), image_url("panorama_min_3.jpg"), :class=>"fancybox thumbnail" %>
			<%= link_to image_tag("panorama_5_thumb.jpg", :class=>"img-responsive"), image_url("panorama_min_5.jpg"), :class=>"fancybox thumbnail" %>
